@{
    ViewBag.Title = "修改密码";
    ViewBag.PageCode = "U1004";
}

@model ContractMvcWeb.Models.Beans.LocalPasswordModel  

<div class="panel panel-default">
    <div class="panel-heading"><h3>修改密码</h3></div>
    <div class="panel-body">
    @using(Html.BeginForm("ChangePassword","User")){
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    <table class="table">
        <tr>
                <td >
                @Html.LabelFor(m=>m.OldPassword)
                </td>
                <td >
                 @Html.PasswordFor(m => m.OldPassword, new {@class= "text_input w190" })
                </td>
            </tr>
                <tr>
                    <td >@Html.LabelFor(m=>m.NewPassword)</td>
                    <td>
                        @Html.PasswordFor(m => m.NewPassword, new {@class="text_input" })
                    </td>
                </tr>

             <tr>
                    <td >@Html.LabelFor(m=>m.ConfirmPassword)</td>
                    <td>
                        @Html.PasswordFor(m => m.ConfirmPassword, new {@class="text_input" })
                    </td>
                </tr>

        <tr>
            <td ></td>
            <td><input type="submit" value="确定" class="btn btn-default" /></td>
        </tr>

        </table>
    
}
        </div>
   </div>
    
    