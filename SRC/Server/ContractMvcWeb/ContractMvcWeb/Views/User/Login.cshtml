@model ContractMvcWeb.Models.LoginModel

@{
    ViewBag.Title = "登录 - 合同管理系统";
    ViewBag.PageCode = "C000";
}


<div class="container">
    
    
    <div class="row">
    
        <div class="col-sm-4 col-sm-offset-3 col-md4 col-md-offset-4 login-margin">
            <div class="page-login-form box text-center">
                <div class="login-description text-center">
                    欢迎回来
                </div>

                @using (@Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary()

                    <div class="form-group">
                        <div class="group-control">
                            <input type="text" id="userName" name="userName" placeholder="用户名" />

                            @*<label class="input_info">用户名:</label>*@
                            @*<p class="login_form_input">

                                @Html.TextBoxFor(m => m.UserName, new {  id="userName", name="username" , @class="login_form_input_ipt"})
                                <i class="ico_uid"></i>
                            </p>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="group-control">
                            @*<label class="input_info">登录密码:</label>
                            <p class="login_form_input">
                                @Html.PasswordFor(m => m.Password, new { id = "password", name = "password", @class = "login_form_input_ipt" })
                                <i class="ico_pwd"></i>
                            </p>*@
                            <input type="password" id="password" name="password" placeholder="密码" />
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" accesskey="l" tabindex="3" class="btn btn-success btn-lg btn-block btn-login" id="loginBtn" value="" title="登录">登录</button>
                    </div>

                }
            </div>
        </div>
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


</div>