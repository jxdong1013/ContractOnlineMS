@model ContractMvcWeb.Models.LoginModel

@{
    ViewBag.Title = "登录 - 合同管理系统";
    ViewBag.PageCode = "C000";
}

<script  type="text/javascript">
    $(document).ready(function () {

        $('#loginForm').bootstrapValidator({
            fields: {
                UserName: {
                    message: "请输入用户名",
                    validators: {
                        notEmpty: "请输入用户名"
                    }
                },
                Password: {
                    message: "请输入密码",
                    validators: {
                        notEmpty:"请输入密码"
                    }
                }
            }
        });
        //$('#loginBtn').click(function () {
            //alert("aaa");
            //$('#defaultForm').bootstrapValidator('validate');
        //});
    });
</script>


<div class="container">
    
    
    <div class="row">
    
        <div class="col-sm-4 col-sm-offset-3 col-md4 col-md-offset-4 login-margin">
            <div class="page-login-form box text-center">
                <div class="login-description text-center">
                    欢迎回来
                </div>

                @using (@Html.BeginForm("Login", "User", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary();

                    <div class="form-group">
                        <div class="group-control">
                            <input type="text" id="UserName" class="form-control" name="UserName" placeholder="用户名" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="group-control">
                            <input type="password" id="Password" class="form-control" name="Password" placeholder="密码" />
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" accesskey="l" tabindex="3" class="btn btn-success btn-default btn-block btn-login" id="loginBtn" value="" title="登录">登录</button>
                    </div>

                }
            </div>
        </div>
    </div>

</div>